draw.a_text 0.4 0.55 "Click" 0xFFFFFF     # 按钮文字
draw.a_circle 0.5 0.8 0.05 0xFF5722      # 圆形装饰

draw.render
draw.save "output/algebraic_layout.ppm"

out "完成: output/algebraic_layout.ppm"
syscall.exit(0)
